<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ANSWER_ME.Models"
             x:Class="ANSWER_ME.Views.AchivementView"
             Shell.NavBarIsVisible="False" Appearing="ContentPage_Appearing">
    <ScrollView>
        <Grid RowDefinitions="50,*">
            <Grid ColumnDefinitions="50,*" Margin="15,0,0,0">
                <ImageButton x:Name="HomeBTN" Grid.Column="0" Source="home.svg" HeightRequest="45" WidthRequest="45" BorderColor="{StaticResource Primary}" Clicked="HomeBTN_Clicked"/>
                <Label Grid.Column="1" Text="Your Achivements" HorizontalTextAlignment="End" VerticalOptions="Center" Margin="0,0,20,0" Opacity="1" FontSize="25"/>
            </Grid>
            <CollectionView Grid.Row="1" ItemsSource="{Binding Achivements}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:Achivement">
                        <Grid HeightRequest="120">
                            <Frame Margin="10,10,10,0" BackgroundColor="{StaticResource Primary}" IsVisible="{Binding Achived}" ZIndex="-1"/>
                            <Grid RowDefinitions="35,50" ColumnDefinitions="260,90" Margin="25,15,20,15">
                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding Title, Mode=OneTime}" Opacity="1" FontSize="22" FontAttributes="Bold" VerticalTextAlignment="End"/>
                                <Label Grid.Row="1" Grid.Column="0" Text="{Binding Description, Mode=OneTime}" FontAttributes="Italic" FontSize="18"/>
                                <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Text="{Binding Date, StringFormat='{0:yy.MM.dd}'}" VerticalOptions="Center" HorizontalOptions="Start" FontSize="18" LineBreakMode="TailTruncation" TextColor="{StaticResource AccentPrimary}" Opacity=".9"/>
                            </Grid>
                            <Frame  Margin="10,10,10,0" BackgroundColor="{StaticResource Primary}" Opacity=".4" ZIndex="-2"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ScrollView>
</ContentPage>