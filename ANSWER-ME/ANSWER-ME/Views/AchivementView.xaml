<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANSWER_ME.Views.AchivementView"
             Shell.NavBarIsVisible="False" Loaded="ContentPage_Loaded">
    <ScrollView>
        <StackLayout>
            <Label 
            Text="Achivements:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Image Source="cat.gif" Loaded="Image_Loaded" WidthRequest="200"/>
            <CollectionView ItemsSource="{Binding Achivements}" BackgroundColor="DarkGray">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Title}" TextColor="White"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>