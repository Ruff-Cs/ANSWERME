<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANSWER_ME.Models.CategoryCard" BackgroundColor="Transparent">

    <Frame Margin="10">

        <Grid RowDefinitions="*,8*" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Transparent" WidthRequest="330">
            <Image x:Name="IllustrationIMG" Grid.Row="1" Margin="20" Source="generalknowledge.png" Aspect="AspectFit"/>
            <Label x:Name="TitleLBL" Grid.Row="0" TextColor="{StaticResource AccentPrimary}" FontAttributes="Bold" Text="Cartoon n Animations" Opacity="1" HorizontalTextAlignment="Center" FontSize="30"/>
        </Grid>
    </Frame>

</ContentPage>